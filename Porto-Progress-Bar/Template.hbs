<div class="progress{{#if Settings.ProgressBarSize}} {{Settings.ProgressBarSize}}{{/if}}{{#if Settings.ProgressBorderRadius}} {{Settings.ProgressBorderRadius}}{{/if}}">
    <div class="progress-bar
    {{#if Settings.ApplyContextualClass}}
        progress-bar-{{Settings.ContextualClassType}}
    {{else}}    
        progress-bar-primary
    {{/if}}
    {{#if Settings.Striped}} 
        progress-bar-striped
    {{/if}}
    {{#if Settings.StripedAnimated}}
        progress-bar-animated
    {{/if}} {{Settings.ProgressColor}}" 
    {{#if Settings.ProgressAnimated}}
        data-appear-progress-animation="{{CompletedAmmount}}%" 
        data-appear-animation-delay="{{Settings.AnimationDelay}}"
    {{else}}
        role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"
        {{#equal CompletedAmmount "0"}}
            style="min-width: 2em;"
            {{else}}
            style="width: {{CompletedAmmount}}%;"
        {{/equal}}
    {{/if}}   
    >      
        {{#if Settings.ShowCompletionText}} 
            {{CompletedAmmount}}%
        {{else}}
            <span class="{{#if Settings.UseTooltip}}progress-bar-tooltip{{else}}sr-only{{/if}}">{{CompletedAmmount}}% Complete</span>
        {{/if}}
    </div>
</div>
